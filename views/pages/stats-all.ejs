                          } else {
                            playerMap.totalBlue = playerMap.totalBlue + 1;
                          }
                          playerMap.totalGames = playerMap.totalGames + 1;

                          playerMap.weekNo = weekCount;
                          var data = [playerMap.won, playerMap.lost, playerMap.drawn, playerMap.totalGames, playerMap.totalRed, playerMap.totalBlue, playerMap.playerName, playerMap.weekNo];
                          playerCountMap[officialName] = playerMap;
                          
